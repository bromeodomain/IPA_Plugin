{
    "name": "IPA Plugin",
    "version": "1.0",
    "description": "IPA Plugin for Chrome for learning a second language and improving pronunciation",
    "permissions": [
        "activeTab",
        "storage",
        "https://*/*",
        "http://*/*",
        "tabs"
    ],
    "background": {
        "scripts": ["js/background.js"],
        "persistent": false
    },
    "browser_action": {
        "default_title": "Toggle IPA Plugin"
    },
    "content_scripts": [
        {
            "matches": [
                "<all_urls>"
            ],
            "js": [
                "js/contentScript.js",
                "js/contentScript2.js"
            ],
            "css": ["css/restyle.css"],
            "all_frames": true
       }
    ],
    "web_accessible_resources": [
        "html/toolbar.html",
        "html/sidebar.html"
    ],
    "manifest_version": 2
}